{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bitmoji",
  "title": "Bitmoji",
  "description": "Your own personal emoji",
  "icon": "icon.png",
  "author": "manumorante",
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "emojis",
      "title": "Emojis",
      "description": "Search Emojis",
      "mode": "view"
    },
    {
      "name": "outfits",
      "title": "Outfits",
      "description": "Explore Outfits",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.58.1",
    "image-downloader": "^4.3.0",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "preferences": [
    {
      "name": "myID",
      "description": "My Bitmoji ID",
      "type": "textfield",
      "required": true,
      "title": "My ID"
    },
    {
      "name": "myName",
      "description": "My own name",
      "type": "textfield",
      "required": false,
      "title": "My Name"
    },
    {
      "name": "columns",
      "description": "Columns for the grid",
      "type": "dropdown",
      "required": false,
      "title": "Columns",
      "default": "5",
      "data": [
        {
          "title": "Small",
          "value": "6"
        },
        {
          "title": "Medium",
          "value": "5"
        },
        {
          "title": "Big",
          "value": "4"
        }
      ]
    },
    {
      "name": "title",
      "description": "Show title",
      "type": "checkbox",
      "required": false,
      "title": "Title",
      "label": "Show description in emoji title",
      "default": false
    },
    {
      "name": "showTooltip",
      "description": "Show Tooltip",
      "type": "checkbox",
      "required": false,
      "title": "Tooltip",
      "label": "Show description when hover in emoji",
      "default": true
    }
  ]
}
