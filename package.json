{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bitmoji",
  "title": "Bitmoji",
  "description": "Your own personal emoji",
  "icon": "icon.png",
  "author": "manumorante",
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Emoji",
      "description": "Quickly search for an emoji",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.58.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "preferences": [
    {
      "name": "avatarID",
      "description": "Your Bitmoji user ID",
      "type": "textfield",
      "required": true,
      "title": "Avatar ID",
      "placeholder": "Your Bitmoji user ID"
    },
    {
      "name": "friendID",
      "description": "Your friend Bitmoji user ID",
      "type": "textfield",
      "required": false,
      "title": "Friend ID",
      "placeholder": "Your friend Bitmoji user ID"
    },
    {
      "name": "gridSize",
      "description": "Grid size",
      "type": "dropdown",
      "required": false,
      "title": "Grid size",
      "default": "5",
      "data": [
        {
          "title": "Small",
          "value": "8"
        },
        {
          "title": "Medium",
          "value": "5"
        },
        {
          "title": "Big",
          "value": "3"
        }
      ]
    },
    {
      "name": "showTitle",
      "description": "Show title",
      "type": "checkbox",
      "required": false,
      "title": "Title",
      "label": "Show description in emoji title",
      "default": false
    },
    {
      "name": "showTooltip",
      "description": "Show Tooltip",
      "type": "checkbox",
      "required": false,
      "title": "Tooltip",
      "label": "Show description when hover in emoji",
      "default": true
    }
  ]
}
